<style>
  .search-form {
    background-color: #fff;
    border: 1.5px solid #eaeaea;
    border-radius: 50px;
    padding: 0.4rem 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    max-width: 500px;
    width: 100%;
    transition: all 0.3s ease;
  }

  .search-input {
    border: none;
    outline: none;
    flex-grow: 1;
    font-size: 1rem;
    padding: 0.6rem 1rem;
    border-radius: 50px;
    background-color: transparent;
  }

  .search-input::placeholder {
    color: #aaa;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border: none;
    padding: 0.55rem 1.3rem;
    font-size: 1rem;
    border-radius: 50px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    transition: background 0.3s ease;
  }

  .search-btn:hover {
    background-color: #e63946;
  }


  .navbar-brand {
    font-size: 1.5rem;
    font-weight: 600;
    color: #fe424d;
  }

  .navbar-toggler {
    border: none;
  }

  .navbar-toggler:focus {
    box-shadow: none;
  }

  /* Slide-in animation */
  .navbar-collapse {
    transition: transform 0.4s ease;
  }

  @media (max-width: 991px) {
    .navbar-collapse {
      position: fixed;
      top: 0;
      right: -100%;
      height: 100%;
      width: 100%;
      background-color: #fff;
      padding: 2rem 1.5rem;
      box-shadow: -2px 0 12px rgba(0, 0, 0, 0.1);
      z-index: 1050;
      transition: right 0.3s ease;
    }

    .navbar-collapse.show {
      right: 0;
    }

    .navbar-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .navbar-nav .nav-link {
      font-size: 1.1rem;
    }

    .navbar-toggler {
      z-index: 1051;
    }

    .nav-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.3);
      z-index: 1049;
    }

    .nav-overlay.active {
      display: block;
    }

    .search-form {
      margin-bottom: 1.5rem;
      border-radius: 2.5rem;
      padding: 0.75rem 1.25rem;
      box-shadow: 0 2px 16px rgba(0, 0, 0, 0.07);
    }

    .search-input {
      font-size: 1.05rem;
      padding: 0.6rem 1rem;
    }

    .search-btn {
      padding: 0.65rem 1.4rem;
      font-size: 1.05rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i> Airbnb</a>

    <!-- Toggle Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span><i class="fa-solid fa-bars fs-4"></i></span>
    </button>

    <!-- Navigation Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mt-4 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <!-- Search Form -->
      <form class="search-form my-3 my-lg-0 mx-auto mx-lg-0" role="search">
        <input class="form-control search-input" type="search" placeholder="Search for places, cities..."
          aria-label="Search">
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> Search
        </button>
      </form>


      <!-- Auth & Actions -->
      <ul class="navbar-nav ms-auto mt-4 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>
      </ul>
    </div>
  </div>

  <!-- Optional Overlay for mobile menu -->
  <div class="nav-overlay" id="navOverlay"></div>
</nav>

<script>
  const toggler = document.querySelector(".navbar-toggler");
  const collapse = document.getElementById("navbarNav");
  const overlay = document.getElementById("navOverlay");

  toggler.addEventListener("click", () => {
    collapse.classList.toggle("show");
    overlay.classList.toggle("active");
  });

  overlay.addEventListener("click", () => {
    collapse.classList.remove("show");
    overlay.classList.remove("active");
  });
</script>