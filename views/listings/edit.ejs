<%- layout("layout/boilerplate") %>
<div class="container min-vh-100 d-flex align-items-center justify-content-center py-4">
  <div class="row w-100 justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="card shadow-lg rounded-4 border-0 p-4 bg-white" style="background: #f8fafc; border: 1.5px solid #f1f1f1;">
        <h1 class="text-center mb-4" style="font-weight: 600; letter-spacing: 1px;">Edit List</h1>
        <form method="post" action="/listings/<%- data._id %>?_method=put" id="new-form" class="needs-validation" enctype="multipart/form-data" novalidate>
          <div class="mb-3">
            <label for="title">Title:</label>
            <input type="text" name="listing[title]" id="title" placeholder="Enter the Title" class="form-control" value="<%- data.title %>" required>
            <div class="invalid-feedback">Please select a valid Title.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label for="description">Description:</label>
            <textarea name="listing[description]" id="description" placeholder="Enter the description" class="form-control" required><%- data.description %></textarea>
            <div class="invalid-feedback">Please select a valid Description.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label">Original listing image:</label> <br>
            <img src="<%- originalurl %>" alt="" class="img-fluid rounded mb-3" style="max-width:100%;height:auto;">
          </div>
          <div class="mb-4">
            <label for="image" class="form-label">Upload listing image:</label>
            <input type="file" name="listing[image]" id="image" class="form-control">
          </div>
          <div class="mb-3">
            <label for="price">Price:</label>
            <input type="number" name="listing[price]" id="price" placeholder="Enter the price" class="form-control" value="<%- data.price %>" required>
            <div class="invalid-feedback">Please select a valid price.</div>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="row">
            <div class="col-12 col-md-6 mb-3 mb-md-0">
              <label for="location">Location:</label>
              <input type="text" name="listing[location]" id="location" placeholder="Enter the Location" class="form-control" value="<%- data.location %>" required>
              <div class="invalid-feedback">Please select a valid location.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="col-12 col-md-6">
              <label for="country">Country: </label>
              <input type="text" name="listing[country]" id="country" placeholder="Enter the country name" class="form-control" value="<%- data.country %>" required>
              <div class="invalid-feedback">Please select a valid country.</div>
              <div class="valid-feedback">Looks good!</div>
            </div>
          </div>
          <div class="mt-4">
            <button type="submit" class="btn btn-dark edit-btn w-100 w-md-auto">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>